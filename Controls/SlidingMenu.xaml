<UserControl
    x:Class="moonlight_xbox_dx.Controls.SlidingMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:moonlight_xbox_dx"
    xmlns:controls="using:moonlight_xbox_dx.Controls"
    xmlns:ui="using:Microsoft.UI.Xaml.Controls">

    <UserControl.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </UserControl.Resources>

    <!-- Root contains an overlay that covers the rest of the app when menu is open -->
    <Grid x:Name="Root" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <!-- Full-screen overlay that blocks interaction when visible -->
        <Border x:Name="Overlay" Background="#80000000" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="1" Tapped="Overlay_Tapped" IsHitTestVisible="False" Opacity="1" />

        <Grid Row="0">
            <Border Background="#FF111111" Padding="12" HorizontalAlignment="Left" CornerRadius="0,12,12,0" VerticalAlignment="Center" MinWidth="200">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="SlideTransform" X="-320" />
                </Border.RenderTransform>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollMode="Disabled" VerticalScrollMode="Auto">
                    <StackPanel VerticalAlignment="Center" Margin="8">
                        <!-- Global items -->
                        <ItemsControl x:Name="GlobalItemsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:MenuItem">
                                    <Button Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Stretch" Click="OnMenuItemClicked">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{x:Bind IconGlyph}" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" FontSize="18" />
                                            <TextBlock Text="{x:Bind Title}" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" FontSize="16" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Separator -->
                        <Rectangle Height="1" Fill="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,8" />

                        <!-- Page items -->
                        <ItemsControl x:Name="PageItemsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:MenuItem">
                                    <Button Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Stretch" Click="OnMenuItemClicked">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{x:Bind IconGlyph}" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" FontSize="18" />
                                            <TextBlock Text="{x:Bind Title}" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" FontSize="16" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
