<ContentDialog
    x:Class="moonlight_xbox_dx.Controls.SlidingMenu"
    x:Name="RootDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:moonlight_xbox_dx"
    xmlns:controls="using:moonlight_xbox_dx.Controls"
    Title="Steam" PrimaryButtonText="" SecondaryButtonText=""
    HorizontalAlignment="Center" VerticalAlignment="Center"
    BorderBrush="Transparent" BorderThickness="0"
    Background="Transparent"
    Height="Auto"
    CornerRadius="30"
    Shadow="{x:Null}">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <!-- Implicit style for this ContentDialog so TemplateBindings respect instance sizing -->
            <Style TargetType="ContentDialog">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContentDialog">
                            <Grid>
                                <!-- Dialog chrome: border that respects sizing set on the ContentDialog -->
                                <Border x:Name="BackgroundElement"
                                        Background="{TemplateBinding Background}"
                                        Width="{TemplateBinding Width}"
                                        Height="{TemplateBinding Height}"
                                        MinWidth="{TemplateBinding MinWidth}"
                                        MaxWidth="{TemplateBinding MaxWidth}"
                                        MinHeight="{TemplateBinding MinHeight}"
                                        MaxHeight="{TemplateBinding MaxHeight}"
                                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                        CornerRadius="{TemplateBinding CornerRadius}">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!-- Centered title bound to the dialog Title -->
                                        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="12,10,12,6" Visibility="Collapsed">
                                            <TextBlock x:Name="DialogTitle"
                                                       Text="{TemplateBinding Title}"
                                                       HorizontalAlignment="Stretch"
                                                       TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="{TemplateBinding Foreground}"/>
                                        </Grid>

                                        <!-- Content placeholder for the dialog's content -->
                                        <ContentPresenter x:Name="DialogContent"
                                                          Grid.Row="1"
                                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                                          Content="{TemplateBinding Content}"
                                                          HorizontalAlignment="Stretch"
                                                          VerticalAlignment="Stretch"
                                                          Margin="0"/>
                                    </Grid>

                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="MenuButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="Background" Value="{ThemeResource ButtonBackgroundColor}"/>
                <Setter Property="Margin" Value="0,-4"/>
            </Style>

        </ResourceDictionary>
    </ContentDialog.Resources>

    <!-- Dialog content -->
    <Grid x:Name="Root" HorizontalAlignment="Center" VerticalAlignment="Center">

        <!-- Visible centered title bound to the ContentDialog's Title -->
        <TextBlock x:Name="VisibleTitle" Text="{Binding Title, ElementName=RootDialog}"
               Grid.Row="0"
               HorizontalAlignment="Stretch"
               TextAlignment="Center"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="SemiBold"
               Margin="12,6,12,8"/>


        <Border x:Name="LeftPanel" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!--<Border.RenderTransform>
                <TranslateTransform x:Name="SlideTransform" X="-360" />
            </Border.RenderTransform>-->
            <Grid Padding="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollMode="Disabled" VerticalScrollMode="Auto" IsTabStop="False" AllowFocusOnInteraction="False">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

                        <!-- Page items -->
                        <ItemsControl x:Name="PageItemsList" IsTabStop="False" AllowFocusOnInteraction="False">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:MenuItem">
                                    <Button Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Stretch" Click="OnMenuItemClicked" IsTabStop="True" AllowFocusOnInteraction="True">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{x:Bind IconGlyph}" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" FontSize="18" />
                                            <TextBlock Text="{x:Bind Title}" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" FontSize="16" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Separator -->
                        <!--<Rectangle Height="1" Fill="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,8" />-->

                        <!-- Global items -->
                        <ItemsControl x:Name="GlobalItemsList" IsTabStop="False" AllowFocusOnInteraction="False">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:MenuItem">
                                    <Button Style="{StaticResource MenuButtonStyle}" HorizontalAlignment="Stretch" Click="OnMenuItemClicked" IsTabStop="True" AllowFocusOnInteraction="True">
                                        <StackPanel Orientation="Horizontal" Spacing="8" >
                                            <TextBlock Text="{x:Bind IconGlyph}" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" FontSize="18" />
                                            <TextBlock Text="{x:Bind Title}" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" FontSize="16" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- VisualStateManager to animate the left panel on Open -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="OpenCloseStates">
                <VisualState x:Name="Closed"/>
                <VisualState x:Name="Opened">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="SlideTransform" Storyboard.TargetProperty="X" To="0" Duration="0:0:0.18" EnableDependentAnimation="True" />
                        <DoubleAnimation Storyboard.TargetName="Overlay" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.18" EnableDependentAnimation="True" />
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</ContentDialog>
